<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.firebaseadminjavafx.GymLayoutController"
            prefWidth="400.0" prefHeight="400.0">

    <children>
        <ImageView fitWidth="400.0" fitHeight="280.0"
                   layoutX="0.0" layoutY="0.0">
            <image>
                <Image url="@gym-design-floor-plan.png" />
            </image>
        </ImageView>

        <!-- Treadmill T1 label and status -->
        <Label layoutX="70.0" layoutY="140.0"
               text="T1"
               style="-fx-font-weight: bold; -fx-border-color: black;" />
        <Label fx:id="treadmillStatusLabel"
               layoutX="105.0" layoutY="140.0"
               prefWidth="40.0" prefHeight="20.0"
               text="YES"
               style="-fx-border-color: green; -fx-background-color: lightgreen; -fx-font-weight: bold;" />

        <!-- Bench B1 label and status -->
        <Label layoutX="260.0" layoutY="90.0"
               text="B1"
               style="-fx-font-weight: bold; -fx-border-color: black;" />
        <Label fx:id="benchStatusLabel"
               layoutX="295.0" layoutY="90.0"
               prefWidth="40.0" prefHeight="20.0"
               text="YES"
               style="-fx-border-color: green; -fx-background-color: lightgreen; -fx-font-weight: bold;" />

        <Button fx:id="backButton"
                layoutX="140.0" layoutY="320.0"
                prefWidth="120.0"
                text="Back"
                onAction="#returnBackToHome" />
    </children>
</AnchorPane>