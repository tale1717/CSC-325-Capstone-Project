<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.firebaseadminjavafx.EnterInfoController"
      spacing="12" alignment="CENTER" prefWidth="400" prefHeight="400">
    <children>
        <Label text="Enter Info" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="nameField"  promptText="Name"  maxWidth="260" />
        <TextField fx:id="ageField"   promptText="Age"   maxWidth="260" />
        <TextField fx:id="phoneField" promptText="Phone" maxWidth="260" />
        <Label fx:id="statusLabel" textFill="#2e7d32" />
        <HBox spacing="16" alignment="CENTER">
            <children>
                <Button fx:id="saveButton" text="Save" onAction="#handleSave" prefWidth="100"/>
                <Button fx:id="backButton" text="Back" onAction="#handleBack" prefWidth="100"/>
            </children>
        </HBox>
    </children>
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</VBox>