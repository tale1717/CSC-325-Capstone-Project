<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.firebaseadminjavafx.WorkoutPlanningController"
      fx:id="root"
      alignment="CENTER"
      spacing="10"
      prefWidth="500"
      prefHeight="550">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Workout Planning"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="firstNameField"
                   promptText="First Name"
                   prefWidth="260"/>

        <TextField fx:id="lastNameField"
                   promptText="Last Name"
                   prefWidth="260"/>

        <TextField fx:id="ageField"
                   promptText="Age"
                   prefWidth="260"/>

        <TextField fx:id="heightField"
                   promptText="Height (cm)"
                   prefWidth="260"/>

        <TextField fx:id="weightField"
                   promptText="Weight (lbs)"
                   prefWidth="260"/>

        <ComboBox fx:id="goalBox"
                  prefWidth="260"/>

        <Label fx:id="statusLabel"
               textFill="#c62828"
               wrapText="true"
               maxWidth="360"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="seePlanButton"
                    text="See My Plan"
                    onAction="#handleSeeMyPlan"
                    prefWidth="130"/>
            <Button fx:id="calorieButton"
                    text="Calorie Intake"
                    onAction="#handleCalorieIntake"
                    prefWidth="130"/>
        </HBox>

        <Label text="Results:"
               style="-fx-font-weight: bold;"/>

        <TextArea fx:id="resultArea"
                  prefWidth="420"
                  prefHeight="220"
                  wrapText="true"/>

        <Button fx:id="backButton"
                text="Back"
                onAction="#handleBack"
                prefWidth="120"/>
    </children>
</VBox>