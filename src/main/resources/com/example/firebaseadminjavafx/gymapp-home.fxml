<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.firebaseadminjavafx.GymAppHomeController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="400">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <children>
        <Label fx:id="headerLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="gymLayoutButton"
                    text="Gym Layout"
                    onAction="#handleGymLayout"
                    prefWidth="140"/>
            <Button fx:id="workoutPlanningButton"
                    text="Workout Planning"
                    onAction="#handleWorkoutPlanning"
                    prefWidth="140"/>
        </HBox>

        <Button fx:id="backButton"
                text="Back"
                onAction="#handleBack"
                prefWidth="120"/>
    </children>
</VBox>