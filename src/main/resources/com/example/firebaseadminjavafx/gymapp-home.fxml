<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.firebaseadminjavafx.GymAppHomeController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="250">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Gym Home"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="gymLayoutButton"
                    text="Gym Layout"
                    onAction="#handleGymLayout"
                    prefWidth="130"/>

            <Button fx:id="workoutPlanningButton"
                    text="Workout Planning"
                    onAction="#handleWorkoutPlanning"
                    prefWidth="130"/>
        </HBox>

        <Button fx:id="backButton"
                text="Back"
                onAction="#handleBack"
                prefWidth="100"/>
    </children>
</VBox>