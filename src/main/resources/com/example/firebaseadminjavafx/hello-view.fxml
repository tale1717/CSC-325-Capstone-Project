<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.firebaseadminjavafx.WelcomeController">

    <children>
        <Label text="Welcome Screen" style="-fx-font-size: 18px;" />
        <TextField fx:id="emailID" promptText="Email" />
        <PasswordField fx:id="passwordID" promptText="Password" />
        <Label fx:id="errorLabel" textFill="#c62828" />
        <Button fx:id="registerButton" text="Register" onAction="#registerButtonClicked" />
        <Button fx:id="signInButton" text="Sign In" onAction="#signInButtonClicked" defaultButton="true"/>
    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>